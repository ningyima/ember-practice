<div class="cart-counter">{{cart.counter}}</div>
<ul>
  {{#each cart.items as |item|}}
    <li>
      <div>{{item.fields.title}}</div>
      <div>{{input value=item.fields.amount key-up=(action "updateCartTotal")}}</div>
      <button class="remove-button" {{action "remove" item}}>Remove</button>
    </li>
  {{else}}
    <p class="cart-empty">
      Your cart is empty.
    </p>
  {{/each}}
</ul>

<div class="cart-total">Total: {{cart.total}}</div>